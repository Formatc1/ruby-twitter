<%= form_for @post, url: {action: 'create', controller: 'posts'} do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Add Tweet" %>
<% end %>

<% if @activities %>
  <%= render :partial => "activities/activity", :collection => @activities %>
  <%= will_paginate @activities, renderer: BootstrapPagination::Rails %>
<% end %>

