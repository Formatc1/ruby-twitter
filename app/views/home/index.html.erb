<%= form_for @post, url: {action: 'create', controller: 'posts'} do |f| %>
  <%= f.label :content %>
  <%= f.text_area :content %>
  <%= f.submit "Add Tweet" %>
<% end %>

<% if @posts %>
  <%= render :partial => "posts/post", :collection => @posts %>
  <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
<% end %>

