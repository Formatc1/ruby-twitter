<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="container">
        <div class="row">
          <div class="col-md-3 col-xs-12">
            <div>
              <strong><%= @user.visible_name %></strong>
            </div>
            <div>
              <span>@<%= @user.username %></span>
            </div>
            <div>
              <span>Joined at: <%= @user.created_at.strftime("%B %Y") %></span>
            </div>
            <div>
              <% if current_user != @user %>
                <% if current_user.following?(@user) %>
                  <%= link_to "Unfollow", unfollow_path(@user.username), method: :delete %>
                <% else %>
                  <%= link_to "Follow", follow_path(@user.username), method: :post %>
                <% end %>
              <% end %>
            </div>
            <div>
              Following: <%= @user.following.count %>
              Followers: <%= @user.followers.count %>
            </div>

          </div>
          <div class="col-md-9 col-xs-12">
            <% if @posts %>
            <%= render @posts, comments: true %>
            <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
            <% else %>
            <div class="row">
              <div class="col-xs-12">
                <p>
                  There is nothing to show, this user has no posts.
                </p>
              </div>
            </div>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
