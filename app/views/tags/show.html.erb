<div class="container">
  <% if @posts %>
    <%= render @posts, comments: true %>
    <%= will_paginate @posts, renderer: BootstrapPagination::Rails %>
  <% else %>
    <div class="row">
      <div class="col-xs-12">
        <p>
          There is nothing to show, there is no posts with this tag.
        </p>
      </div>
    </div>
  <% end %>
</div>
